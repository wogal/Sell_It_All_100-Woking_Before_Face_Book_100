<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <TextView
        android:id="@+id/txt_header_v10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="25dp"
        android:background="@drawable/obect_header_txt_v1_"
        android:gravity="center"
        android:padding="15dp"
        android:text=" FaceBook (v10)"
        android:textColor="#F4511E"
        android:textSize="30sp"
        android:textStyle="bold"/>


    <com.facebook.login.widget.LoginButton
        android:id="@+id/facebook_login_button_v10"
        android:background="@drawable/obect_header_txt_v1_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_header_v10"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="30dp"
        />

    <Button
        android:id="@+id/But_facebookPost_v10"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_below="@id/facebook_login_button_v10"
        android:background="@drawable/bg_btn_login_background"
        android:text="FaceBook Post"
        android:textColor="#FFC107"
        android:textSize="25dp"
        android:textStyle="italic"/>

    <Button
        android:id="@+id/But_facebook_ID_v10"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_below="@id/But_facebookPost_v10"
        android:background="@drawable/bg_btn_login_background"
        android:text="Get FaceBook ID "
        android:textColor="#FFC107"
        android:textSize="25dp"
        android:textStyle="italic"/>



</RelativeLayout>
